{
  "openapi": "3.0.1",
  "info": {
    "title": "Swagger",
    "description": "REST API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Location",
      "description": "여행지 관련 API"
    },
    {
      "name": "회원 관리",
      "description": "회원 관련 API"
    }
  ],
  "paths": {
    "/api/member": {
      "post": {
        "tags": [
          "회원 관리"
        ],
        "summary": "회원가입",
        "description": "새로운 회원을 등록합니다.",
        "operationId": "createMember",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemberRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "요청 데이터가 유효하지 않음",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "example": "잘못된 요청입니다."
                }
              }
            }
          },
          "200": {
            "description": "회원가입 성공",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "example": "홍길동님이 회원가입 되었습니다."
                }
              }
            }
          }
        }
      }
    },
    "/location": {
      "get": {
        "tags": [
          "Location"
        ],
        "summary": "여행지 목록 조회",
        "description": "추천 여행지 목록을 조회합니다.",
        "operationId": "getLocations",
        "responses": {
          "401": {
            "description": "인증 실패",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LocationResponseDTO"
                  }
                }
              }
            }
          },
          "200": {
            "description": "여행지 목록 조회 성공",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LocationResponseDTO"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/location/exchange-rate": {
      "get": {
        "tags": [
          "Location"
        ],
        "summary": "여행지별 환율 조회",
        "description": "여행지별 환율과 국가명, 통화코드를 조회합니다.",
        "operationId": "getExchangeRate",
        "parameters": [
          {
            "name": "location_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "인증 실패",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/CurrencyInfoDTO"
                }
              }
            }
          },
          "200": {
            "description": "환율 조회 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/CurrencyInfoDTO"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/location/airline": {
      "get": {
        "tags": [
          "Location"
        ],
        "summary": "여행지별 주요 항공사 조회",
        "description": "여행지별 주요 항공사 목록을 조회합니다.",
        "operationId": "getAirlinesByLocation",
        "parameters": [
          {
            "name": "location_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "인증 실패",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AirlineResponseDTO"
                  }
                }
              }
            }
          },
          "200": {
            "description": "항공사 목록 조회 성공",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AirlineResponseDTO"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "MemberRequestDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "description": "회원가입 요청 데이터"
      },
      "LocationResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "currency_unit": {
            "type": "string"
          }
        }
      },
      "CurrencyInfoDTO": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string"
          },
          "currency_unit": {
            "type": "string"
          },
          "exchange_rate": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "AirlineResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}